---
import { getCollection } from 'astro:content';
import Button from '../components/Button.astro';
import Hero from '../components/Hero.astro';
import StackPreview from '../components/StackPreview.astro';
import ProjectPreview from '../components/ProjectPreview.astro';
import siteConfig from '../data/site-config';
import BaseLayout from '../layouts/BaseLayout.astro';
import { sortItemsById } from '../utils/data-utils';

const stacks = (await getCollection('stacks')).sort(sortItemsById);
const featuredStacks = stacks.filter(({ data }) => data.isFeatured).slice(0, 4);

const projects = (await getCollection('projects')).sort(sortItemsById);
const featuredProjects = projects.filter(({ data }) => data.isFeatured).slice(0, 4);
---

<BaseLayout description={siteConfig.description}>
    <Hero {...siteConfig.hero} />

    {
        featuredProjects?.length > 0 && (
            <div class="mb-16 sm:mb-24">
                <h2 class="mb-12 font-serif text-xl italic sm:mb-16 sm:text-2xl">Proyectos y desafíos</h2>
                {featuredProjects.map((project) => (
                    <ProjectPreview project={project} class="mb-10 sm:mb-12" headingLevel="h3" />
                ))}
                <div class="mt-12 sm:mt-16">
                    <Button href="/projects">Ver todos los Proyectos</Button>
                </div>
            </div>
        )
    }

    {
        featuredStacks?.length > 0 && (
            <div class="mb-16 sm:mb-24">
                <h2 class="mb-12 font-serif text-xl italic sm:mb-16 sm:text-2xl">Especialización y Stacks</h2>
                {featuredStacks.map((stack) => (
                    <StackPreview stack={stack} class="mb-10 sm:mb-12" headingLevel="h3" />
                ))}
                <div class="mt-12 sm:mt-16">
                    <Button href="/stacks">Explorar mi Stack completo</Button>
                </div>
            </div>
        )
    }
</BaseLayout>