---
import type { GetStaticPathsOptions, Page } from 'astro';
import { type CollectionEntry, getCollection } from 'astro:content';
import Pagination from '../../../components/Pagination.astro';
import StackPreview from '../../../components/StackPreview.astro';
import Subscribe from '../../../components/Subscribe.astro';
import siteConfig from '../../../data/site-config';
import BaseLayout from '../../../layouts/BaseLayout.astro';
import { getAllTags, getStacksByTag, sortItemsById } from '../../../utils/data-utils';

export async function getStaticPaths({ paginate }: GetStaticPathsOptions) {
    const stacks = (await getCollection('stacks')).sort(sortItemsById);
    const tags = getAllTags(stacks);

    return tags.flatMap((tag) => {
        const filteredStacks = getStacksByTag(stacks, tag.id);
        return paginate(filteredStacks, {
            params: { id: tag.id },
            pageSize: siteConfig.stacksPerPage || 4
        });
    });
}

type Props = { page: Page<CollectionEntry<'stacks'>> };

const { page } = Astro.props;
const stacks = page.data;
const params = Astro.params;
const allStacks = await getCollection('stacks');
const allTags = getAllTags(allStacks);
const currentTag = allTags.find((tag) => {
    return tag.id === params.id;
});
---

<BaseLayout title={`Stacks etiquetados con ${currentTag?.name}`} description={`Explora una colección curada de stacks bajo la categoría ${currentTag?.name}`} showHeader={false}>
    <h1 class="mb-12 font-serif text-2xl leading-tight italic sm:mb-16 sm:text-4xl">Stacks Etiquetados con "{currentTag?.name}"</h1>
    {stacks.map((stack) => <StackPreview stack={stack} class="mb-10 sm:mb-12" />)}
    <Pagination page={page} class="my-16 sm:my-24" />
    <Subscribe class="my-16 sm:my-24" />
</BaseLayout>
