---
import { getCollection } from 'astro:content';
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getAllTags } from '../../utils/data-utils';

const stacks = await getCollection('stacks');
const tags = getAllTags(stacks);
---

<BaseLayout title="Tags" description="Explora los stacks por categorÃ­as" showHeader={false}>
    <h1 class="mb-12 font-serif text-2xl leading-tight italic sm:mb-16 sm:text-4xl">Tags</h1>
    <div class="flex flex-wrap gap-4">
        {
            tags.map((tag) => (
                <a
                    href={`/tags/${tag.id}`}
                    class="bg-main border-main inline-block border border-dashed px-4 py-2 text-lg hover:bg-neutral-100 dark:hover:bg-neutral-800"
                >
                    #{tag.name}
                </a>
            ))
        }
    </div>
</BaseLayout>